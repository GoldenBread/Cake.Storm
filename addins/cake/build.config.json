{
    "build": {
        "solution": "../CakeAddins.sln",
        "properties": [
            {
                "key": "Configuration",
                "value": "Release"
            }
        ]
    },
    "platforms": [
        {
            "name": "dotnet",
            "build": {
                "properties": [
                    {
                        "key": "Platform",
                        "value": "'Any CPU'"
                    }
                ]
            }
        }
    ],
    "targets": [
        {
            "name": "nuget"
        }
    ],
    "apps": [
        {
            "name": "JsonBuildConfiguration",
            "targets": [
                {
                    "name": "nuget",
                    "dotnet": {
                        "output": "../artifacts/nuget/Cake.Storm.JsonBuildConfiguration/lib/net45"
                    }
                }
            ],
            "build": {
                "project": "../src/Cake.Storm.JsonBuildConfiguration/Cake.Storm.JsonBuildConfiguration.csproj"
            }
        },
        {
            "name": "Android",
            "targets": [
                {
                    "name": "nuget",
                    "dotnet": {
                        "output": "../artifacts/nuget/Cake.Storm.Android/lib/net45"
                    }
                }
            ],
            "build": {
                "project": "../src/Cake.Storm.Android/Cake.Storm.Android.csproj"
            }
        },
        {
            "name": "iOS",
            "targets": [
                {
                    "name": "nuget",
                    "dotnet": {
                        "output": "../artifacts/nuget/Cake.Storm.iOS/lib/net45"
                    }
                }
            ],
            "build": {
                "project": "../src/Cake.Storm.iOS/Cake.Storm.iOS.csproj"
            }
        },
        {
            "name": "Nuget",
            "targets": [
                {
                    "name": "nuget",
                    "dotnet": {
                        "output": "../artifacts/nuget/Cake.Storm.Nuget/lib/net45"
                    }
                }
            ],
            "build": {
                "project": "../src/Cake.Storm.Nuget/Cake.Storm.Nuget.csproj"
            }
        }
    ]
}